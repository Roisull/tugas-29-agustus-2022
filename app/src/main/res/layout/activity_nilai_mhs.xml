<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".NilaiMhsActivity">

    <LinearLayout
        android:id="@+id/ll_et_mhs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Menghitung Nilai Akhir Mahasiswa"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/et_input_nama_mhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="masukkan nama"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:background="@drawable/bg_et"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_input_nim_mhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="masukkan nim"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:background="@drawable/bg_et"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_nilai_uas_mhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nilai uas"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:background="@drawable/bg_et"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_nulai_uts_mhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nilai uts"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:background="@drawable/bg_et"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_nilai_tugas_mhs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nilai tugas"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:background="@drawable/bg_et"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn_mhs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_et_mhs">

        <Button
            android:id="@+id/btn_hitung_nilai_akhir_mhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="hitung"
            android:textColor="@color/black"
            android:background="@drawable/bg_btn_hitung"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_reset_nilai_akhir_mhs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            android:backgroundTint="@color/red"
            android:textAllCaps="false"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>